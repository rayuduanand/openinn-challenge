{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "outDir": "./public/js",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": ["dom", "es2020"]
  },
  "include": ["src/client.ts"],
  "exclude": ["node_modules", "dist"]
}
